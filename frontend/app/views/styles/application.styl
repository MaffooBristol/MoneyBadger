// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

// Apply a natural box layout model to all elements.
// http://paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing: border-box

body
  background #f3f3f3

#home-view
  // width: 880px

#chart
  margin: 40px auto
  background white
  border 1px solid #e0e0e0
  padding 40px
  width: 98%
  cursor: crosshair

#description
  position fixed
  left 20px

#list
  #list-inner
    height 400px
    width 80%
    overflow-y scroll
    font-size 10px
    margin 20px
    background white
    border 1px solid #999
    table
      width 100%
    td
      border-bottom 1px solid #aaa
  #search-list
    margin 20px
    margin-bottom 60px

#months
  width 500px
  margin-left 50px
